<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">

    <DockPanel Margin="10" LastChildFill="True">
        <TextBlock DockPanel.Dock="Top">Order Number: 1</TextBlock>
        <TextBlock DockPanel.Dock="Top">Date: 3/1/2024</TextBlock>

        <TextBlock DockPanel.Dock="Bottom" x:Name="TotalGUI">Total: XX</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" x:Name="TaxGUI">Tax: XX</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" x:Name="SubtotalGUI">Subtotal: XX</TextBlock>

        <ListView DockPanel.Dock="Bottom" x:Name="ListViewGUI"></ListView>

        <DockPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </DockPanel.Resources>
        
        
    </DockPanel>
</UserControl>
