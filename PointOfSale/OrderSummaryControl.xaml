<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">

    <DockPanel Margin="10" LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Margin="10" FontSize="20">Order Number: 1</TextBlock>
        <TextBlock DockPanel.Dock="Top" Margin="10" FontSize="20">Date: 3/1/2024</TextBlock>

        <TextBlock DockPanel.Dock="Bottom" Name="TotalGUI" Margin="10" FontSize="20">Total: XX</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Name="TaxGUI" Margin="10" FontSize="20">Tax: XX</TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Name="SubtotalGUI" Margin="10" FontSize="20">Subtotal: XX</TextBlock>

        <ListView DockPanel.Dock="Bottom" Name="ListViewGUI" ItemsSource="{Binding}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="15"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </DockPanel>
</UserControl>
